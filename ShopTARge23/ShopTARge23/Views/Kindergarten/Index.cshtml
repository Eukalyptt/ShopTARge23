@model IEnumerable<ShopTARge23.Models.Kindergartens.KindergartensIndexViewModel>

<!-- pealkiri -->
<div class="h1">
	Kindergartens
</div>

@{
	int rowNumber = 1;
}

<!-- loomis nupp -->
<div>
	<a asp-action="create" asp-controller="Kindergarten" type="submit" class="btn btn-outline-primary">Add Kindergarten</a>
</div>

<!-- tabel + sisu -->
<form method="post">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">Nr</th>
				<th scope="col">Group Name</th>
				<th scope="col">Children Count</th>
				<th scope="col">Kindergarten Name</th>
				<th scope="col">Teacher</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var kindergartens in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@kindergartens.GroupName</td>
					<td>@kindergartens.ChildrenCount</td>
					<td>@kindergartens.KindergartenName</td>
					<td>@kindergartens.Teacher</td>
					
					<!-- detail/update/delete nupud -->
					<td>
						<a asp-action="details" asp-controller="kindergarten" asp-route-id="@kindergartens.Id" class="btn btn-info">Details</a>
						<a asp-action="update" asp-controller="kindergarten" asp-route-id="@kindergartens.Id" class="btn btn-secondary">Update</a>
						<a asp-action="delete" asp-controller="kindergarten" asp-route-id="@kindergartens.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>